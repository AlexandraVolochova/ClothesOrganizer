<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.clothesorganizer" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> /*permission to write smth on SD-card*/
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".WardrobeActivity"
            android:label="@string/wardrobe_title"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".CreationActivity"
            android:label="@string/creation_title"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
